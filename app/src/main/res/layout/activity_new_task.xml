    <Button
        android:id="@+id/do_date_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/prompt_do_date"
        android:textColor="@color/colorPrimary"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_pick_do_date"
        style="?borderlessButtonStyle"/>

    <Button
        android:id="@+id/due_date_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/prompt_due_date"
        android:textColor="@color/colorAccent"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_pick_due_date"
        style="?borderlessButtonStyle"/>

    <Spinner
        android:id="@+id/category_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"/>

